<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title_temp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户安全"
            android:textColor="@color/textTitleColor"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/shape_circle_zhuxiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="很遗憾，状元共享课堂无法为你提供服务，感谢你一直以来的陪伴，注销账号前，我们需要对以下信息进行审核。以保证你的账号安全。"
            android:textColor="@color/textHoldColor" />
        <View
            android:layout_marginTop="10dp"
            android:background="#E1E1E1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:lineSpacingMultiplier="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="1.账号无任何充值、退款等纠纷"
            android:layout_marginTop="10dp"
            android:textColor="@color/textHoldColor" />
        <TextView
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="2.确认注销账号由注册用户本人操作"
            android:textColor="@color/textHoldColor" />
        <View
            android:layout_marginTop="10dp"
            android:background="#E1E1E1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="注销成功后，将无法使用此账户"
            android:textColor="@color/textHoldColor" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:paddingRight="5dp"
                android:id="@+id/cb_view"
                android:button="@drawable/selector_yinshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:lineSpacingMultiplier="1.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:text="申请注销即表示你自愿放弃账号内所有虚拟资产及历史数据"
                android:textColor="#999999" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="若有其他问题，请点击"
            android:textColor="@color/textHoldColor"/>
        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:text="此处"
            android:textColor="@color/textrightColor"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_zhu"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_e1e1e1_20"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="申请注销"
        android:textColor="@color/textHoldColor"/>
</LinearLayout>