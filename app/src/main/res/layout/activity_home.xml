<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ll_home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_home_container"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_tab_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_home_ic_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/ketang_uncheck" />

                        <ImageView
                            android:id="@+id/iv_home_ic_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/ketang_check"
                            android:visibility="gone" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_home_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="课堂"
                        android:textColor="@color/selector_text"
                        android:textSize="11sp" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_tab_finance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_finance_ic_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/dayi_uncheck" />

                        <ImageView
                            android:id="@+id/iv_finance_ic_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/dayi_check"
                            android:visibility="gone" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_finance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="答疑"
                        android:textColor="@color/selector_text"
                        android:textSize="11sp" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_tab_find"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_find_ic_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/huodong_uncheck" />

                        <ImageView
                            android:id="@+id/iv_find_ic_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/huodong_check"
                            android:visibility="gone" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_find_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="活动"
                        android:textColor="@color/selector_text"
                        android:textSize="11sp" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_tab_myaccount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/view_pint"
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_gravity="right"
                            android:background="@drawable/oval_red"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_myaccount_ic_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/wode_uncheck" />

                        <ImageView
                            android:id="@+id/iv_myaccount_ic_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/wode_check"
                            android:visibility="gone" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_myaccount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="我的"
                        android:textColor="@color/selector_text"
                        android:textSize="11sp" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/home_rl_yin_dao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/home_iv_yin_dao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="200"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/home_iv_yin_dao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:alpha="200"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_rl_yin_dao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/me_iv_yin_dao3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:alpha="200"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/me_iv_yin_dao4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="90dp"
            android:alpha="200"
            android:scaleType="fitXY" />

    </RelativeLayout>

</FrameLayout>