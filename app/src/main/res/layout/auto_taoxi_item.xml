<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/auto_taoxi_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/all_margin_left"
            android:layout_centerVertical="true"
            android:src="@drawable/morenshu"/>
        <TextView
            android:id="@+id/auto_taoxi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/auto_taoxi_img"
            android:text="图书标题图书标题图书标题图书标题"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/auto_taoxi_jiage"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/auto_taoxi_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="20积分"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/textColor"/>
    </RelativeLayout>
</LinearLayout>