<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="5dp"
    android:background="@color/cardviewback"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:background="@color/cardviewback"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kecheng_image"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/morenshu" />

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kecheng_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="示例题目"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_6a3906"
                android:textSize="12sp" />
            <LinearLayout
                android:id="@+id/kecheng_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kecheng_name"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kecheng_moneyicon"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/xuexibi" />

                <TextView
                    android:id="@+id/kecheng_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_EE7C55"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>