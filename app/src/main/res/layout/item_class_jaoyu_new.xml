<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="76dp"
    android:layout_height="76dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="5dp"
    android:background="@color/cardviewback"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardviewback"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kecheng_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/morenshu" />
        <LinearLayout
            android:background="@drawable/home_szjy_bg"
            android:paddingLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:paddingBottom="2dp"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kecheng_moneyicon"
                android:layout_width="10dp"
                android:layout_height="7dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="1dp"
                android:src="@drawable/home_yunabao" />
            <TextView
                android:id="@+id/kecheng_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_EE7C55"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_youhui"
            android:visibility="gone"
            android:src="@drawable/syyh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>