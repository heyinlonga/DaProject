<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <RelativeLayout
        android:layout_width="66dp"
        android:layout_height="66dp">
        <ImageView
            android:id="@+id/iv"
            android:src="@drawable/morenshu"
            android:layout_width="66dp"
            android:adjustViewBounds="true"
            android:layout_height="66dp"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_youhui"
            android:src="@drawable/syyh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6a3906"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kecheng_moneyicon"
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/xuexibi" />

            <TextView
                android:id="@+id/kecheng_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_EE7C55"
                android:textSize="12sp" />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>