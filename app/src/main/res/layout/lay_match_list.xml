<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--正在进行-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_zzjx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_zzjx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/zzjx"
                android:drawablePadding="5dp"
                android:text="正在进行"
                android:textColor="@color/color_6a3906"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_zzjx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_zzjx"
                android:layout_marginTop="7dp" />
        </RelativeLayout>
        <!--即将开始-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_jjks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_jjks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/jjks"
                android:drawablePadding="5dp"
                android:text="即将开始"
                android:textColor="@color/color_6a3906"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_jjks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_jjks"
                android:layout_marginTop="7dp" />
        </RelativeLayout>
        <!--往期比赛-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_wqbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_wqbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/wqbs"
                android:drawablePadding="5dp"
                android:text="往期比赛"
                android:textColor="@color/color_6a3906"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_wqbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_wqbs"
                android:layout_marginTop="7dp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>