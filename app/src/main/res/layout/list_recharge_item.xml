<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:background="@drawable/background_shape_circle_stoke_red"
    android:layout_height="90dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recharge_bi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="@color/textHoldColor"
            android:textSize="13sp"
            android:text="50币" />
        <TextView
            android:id="@+id/recharge_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="@color/textHoldColor"
            android:textSize="8sp"
            android:text="（赠送200积分）"
            />
        <TextView
            android:id="@+id/recharge_money"
            android:layout_below="@+id/recharge_bi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:textColor="@color/textgrayColor"
            android:textSize="13sp"
            android:text="50元" />
    </LinearLayout>
    <ImageView
        android:id="@+id/check_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/xuanzhong"/>
</RelativeLayout>