<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/tree_item_r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_margin_left"
        android:layout_marginRight="@dimen/all_margin_right"
        android:paddingBottom="10dp"
        android:visibility="visible"
        card_view:cardBackgroundColor="@color/cardviewback"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tree_item_name1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_margin_left"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxEms="14"
                android:ellipsize="end"
                android:text="示例题目"
                android:textColor="@color/textHoldColor" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_suo1"
                android:layout_toRightOf="@+id/tree_item_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/suo" />
            <ImageView
                android:id="@+id/tree_item_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_margin_left"
                android:layout_marginRight="@dimen/all_margin_right"
                android:src="@drawable/xuanze1" />


        </RelativeLayout
>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tree_item_r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_margin_left"
        android:layout_marginRight="@dimen/all_margin_right"
        android:paddingBottom="10dp"
        android:visibility="visible"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="1dp">

        <RelativeLayout
            android:id="@+id/rl_tree_item_r2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/background_shape_circle_stoke">
            <TextView
                android:maxEms="14"
                android:ellipsize="end"
                android:id="@+id/tree_item_name2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_margin_left"
                android:gravity="center_vertical"
                android:text="示例题目"
                android:textColor="@color/textHoldColor" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_suo2"
                android:layout_toRightOf="@+id/tree_item_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/suo" />
            <LinearLayout
                android:id="@+id/ll_cha_kan"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/all_margin_right"
                android:gravity="center|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_r2_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="查看"
                    android:textColor="@color/textColor" />

                <ImageView
                    android:id="@+id/iv_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/gengduo" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>